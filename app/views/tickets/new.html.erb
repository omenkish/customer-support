<h2>Submit a request</h2>

<%= form_for @ticket do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, rows: 10 %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>

